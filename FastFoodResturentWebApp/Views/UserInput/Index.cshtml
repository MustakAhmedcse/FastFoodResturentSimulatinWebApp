@model FastFoodResturentWebApp.Models.UserInput

@{
    ViewBag.Title = "Calculate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .field-validation-error {
       
        font-style: italic;
    }
    #textfild {
        font-size: 15px;
        margin: 1%;
        }
    
</style>
<h2>Simulation Calculate</h2>

@using (Html.BeginForm(new { @class = "form-horizontal", role = "form" }))
{
    @*@Html.AntiForgeryToken()*@
    <h4>User Input Lable</h4>
    <hr />

    <div class="row">
        @Html.LabelFor(m => m.CalculateTime, new { @class = "col-md-4 control-label", id = "textfild" })
        @*<div class="col-md-10">*@
        @Html.TextBoxFor(m => m.CalculateTime, new { @class = "form-control col-md-2 " ,@placeholder="Time in Minute" })<h5 class="col-md-2" id="textfild">Minutes</h5>
    </div>
        @Html.ValidationMessageFor(m => m.CalculateTime)

        @*</div>*@
   


    <div class="form-group">
        <div class="col-md-12 col-md-offset-6" >
            <input type="submit" class="btn btn-default" value="Calculate" />
        </div>
        <div>
            <h3>@ViewBag.message</h3>
        </div>
    </div>
}


@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
