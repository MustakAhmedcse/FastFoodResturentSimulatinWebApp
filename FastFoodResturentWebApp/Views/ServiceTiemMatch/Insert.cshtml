@model FastFoodResturentWebApp.Models.ServiceTiemMatch

@{
    ViewBag.Title = "Insert Random Degit Range";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .field-validation-error {
        
        font-style: italic;
    }
</style>
<h2>Service Tiem Random Digit Range</h2>


@using (Html.BeginForm(new { @class = "form-horizontal", role = "form" })) 
{
    @*@Html.AntiForgeryToken()*@
    
    <div class="form-horizontal">
        <h4>User Input Lable</h4>
        <hr />
        @*@Html.ValidationSummary()*@

        <div class="form-group">
            @Html.LabelFor(m => m.ServiceTiem, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ServiceTiem, new { @class = "form-control", @placeholder="Time" })
                @Html.ValidationMessageFor(m => m.ServiceTiem)
            </div>
        </div><div class="form-group">
            @Html.LabelFor(m => m.MinRange, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.MinRange, new { @class = "form-control",@placeholder="From" })
                @Html.ValidationMessageFor(m => m.MinRange )
            </div>
        </div><div class="form-group">
            @Html.LabelFor(m => m.MaxRange, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.MaxRange , new { @class = "form-control", @placeholder = "To" })
                @Html.ValidationMessageFor(m => m.MaxRange)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
            <h3>@ViewBag.message</h3>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Show Data", "ShowAllServiceTimeData","ServiceTiemMatch")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}
